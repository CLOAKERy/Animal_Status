@model Animal_Status.VaccinationViewModel

<h2>Добавить новую вакцинe</h2>

<form asp-action="CreateVaccine">
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VaccinationDate">Дата</label>
        <input asp-for="VaccinationDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="VaccinationDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Добавить</button>
    <a asp-action="Vaccines" class="btn btn-secondary">Отмена</a>
</form>
