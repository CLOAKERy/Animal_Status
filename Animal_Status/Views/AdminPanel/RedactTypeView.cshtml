@model Animal_Status.Models.AnimalTypeViewModel

<h2>Редактировать тип</h2>

<form asp-action="RedactType" asp-route-id="@Model.TypeId">
    <div class="form-group">
        <label asp-for="TypeName">Название</label>
        <input asp-for="TypeName" class="form-control" />
        <span asp-validation-for="TypeName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
