@model IEnumerable<Animal_Status.VaccinationViewModel>

<h2>Список вакцин</h2>

<p>
    <a asp-action="CreateVaccine" class="btn btn-success">Добавить новую вакцию</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vaccination in Model)
        {
            <tr>
                <td>@vaccination.Name</td>
                <td>@vaccination.VaccinationDate.ToShortDateString()</td>
                <td>
                    <a asp-action="RedactVaccineView" asp-route-id="@vaccination.VaccinationId" class="btn btn-primary">Редактировать</a>
                    <a asp-action="DeleteVaccine" asp-route-id="@vaccination.VaccinationId" class="btn btn-danger"
                       onclick="return confirm('Вы уверены, что хотите удалить эту вакцину?')">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
