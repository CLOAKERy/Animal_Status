@model IEnumerable<Animal_Status.Models.AnimalTypeViewModel>

<h2>Типы животных</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in Model)
        {
            <tr>
                <td>@type.TypeName</td>
                <td>
                    <a class="btn btn-primary" asp-action="RedactTypeView" asp-route-id="@type.TypeId">Редактировать</a>
                    <a class="btn btn-danger" asp-action="DeleteType" asp-route-id="@type.TypeId"
                    onclick="return confirm('Вы уверены, что хотите удалить этот тип?')">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-success" asp-action="CreateType">Добавить новый тип</a>
</div>
