@model Animal_Status.BehaviorViewModel

<h2>Добавить Поведение</h2>

<form asp-action="AddBehavior" asp-route-petId="@Model.PetId" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="BehaviorDate" class="control-label">Дата поведения:</label>
        <input asp-for="BehaviorDate" class="form-control" />
        <span asp-validation-for="BehaviorDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>



    <div class="form-group">
        <button type="submit" class="btn btn-primary">Добавить Поведение</button>
    </div>
</form>
