@model Animal_Status.WeightAndHeightViewModel

@{
    ViewData["Title"] = "Добавить измерение";
}

<h2>Добавить измерение</h2>

<form asp-action="AddWeightAndHeight" asp-route-petId="@Model.PetId" method="post">
    <div class="form-group">
        <label asp-for="MeasurementDate">Дата измерения</label>
        <input asp-for="MeasurementDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="MeasurementDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight">Вес</label>
        <input asp-for="Weight" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Height">Рост</label>
        <input asp-for="Height" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
